/* الخطوط والألوان الأساسية */
@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap');

body {
  font-family: 'Cairo', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #fff;
  color: #333;
}

.container {
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
}

/* الهيدر */
.site-header {
  background-color: {{ settings.primary_color }};
  padding: 15px 0;
  color: #fff;
}
.site-header .logo h1 {
  margin: 0;
}
.site-header .tagline {
  font-size: 0.9em;
}

/* القائمة الرئيسية */
.main-menu ul {
  list-style: none;
  padding: 0;
  display: flex;
  gap: 20px;
}
.main-menu ul li a {
  color: #fff;
  text-decoration: none;
}

/* الفوتر */
.site-footer {
  background-color: {{ settings.secondary_color }};
  color: #fff;
  padding: 20px 0;
  text-align: center;
}
.site-footer a {
  color: #fff;
  text-decoration: underline;
}

/* قسم المنتج */
.product-section {
  display: flex;
  flex-wrap: wrap;
  padding: 30px 0;
}
.product-image {
  flex: 1 1 40%;
  text-align: center;
}
.product-image img {
  max-width: 100%;
  height: auto;
}
.product-details {
  flex: 1 1 60%;
  padding: 0 20px;
}
.product-title {
  margin-top: 0;
}
.buy-button button, .floating-buy-btn button, .quick-checkout button {
  border: none;
  padding: 10px 20px;
  color: #fff;
  font-size: 1.1em;
  cursor: pointer;
  margin-top: 10px;
}

/* زر الشراء العائم */
.floating-buy-btn {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 1000;
}

/* مؤقت العد التنازلي */
.countdown-timer {
  margin-top: 20px;
  font-size: 1.2em;
  background: #f5f5f5;
  padding: 10px;
  display: inline-block;
}

/* الوضع الليلي */
body.dark-mode {
  background-color: #222;
  color: #ddd;
}
body.dark-mode .site-header, body.dark-mode .site-footer {
  background-color: #111;
}

/* استجابة الشاشة */
@media (max-width: 768px) {
  .product-section {
    flex-direction: column;
  }
  .floating-buy-btn {
    right: 10px;
    bottom: 10px;
  }
}
